#!/bin/sh
# Post-commit hook: execute install.sh from the repository root

# Determine the repository root directory
REPO_ROOT=$(git rev-parse --show-toplevel)

# Construct the full path to install.sh
INSTALL_SCRIPT="$REPO_ROOT/install.sh"

# Check if install.sh exists and is executable
if [ -x "$INSTALL_SCRIPT" ]; then
    "$INSTALL_SCRIPT"
else
    echo "Error: install.sh not found or not executable in $REPO_ROOT."
fi
